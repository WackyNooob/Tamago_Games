   Unit4.Form4.TimerFany.Enabled:=true;
   Unit4.Form4.TimerSon.Enabled:=true;
   Unit4.Form4.TimerHeath.Enabled:=true;
   self.Enabled:=false;
   self.Visible := false;
   Unit4.Form4.show;
   Unit7.Form7.close;
