end

else
if (rukzak[6]=0) then
begin
rukzak[6]:=shlem;
image6.Canvas.Draw(0,0,predmets[shlem]);
end

else
for i:=1 to 1 do
if rukzak[i]>0 then
showmessage ('Рюкзак заполнен');
if combobox1.ItemIndex=-1 then
showmessage ('Нечего покупать');
end;

